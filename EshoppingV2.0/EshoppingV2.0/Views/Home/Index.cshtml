@{
    ViewBag.Title = "Home Page";
}
<style>
    @@media only screen and (min-width: 500px) {
        .thumbnail img {
            height: 180px;
        }
    }

    .carousel-inner > .item > img,
    .carousel-inner > .item > a > img {
        width: 70%;
        margin: auto;
    }
</style>
<div class="container">
    <br>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="http://shoppingsamrat.com/blog/wp-content/uploads/2014/09/online-shop-banner.jpg" alt="Chania" style="width:100%;height:300px">
            </div>

            <div class="item">
                <img src="https://www.izonlineshop.com/image/cache/catalog/banner-1140x380.jpg" alt="Chania" style="width:100%;height:300px">
            </div>

            <div class="item">
                <img src="http://www.seoqart.com/images/banner.jpg" alt="Flower" style="width:100%;height:300px">
            </div>

            <div class="item">
                <img src="https://www.enjoylowprice.com/images/slide-banner.jpg" alt="Flower" style="width:100%;height:300px">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <h4>Women Special</h4>
        <div class="thumbnail">
            <img src="http://www.super169.com/wp-content/uploads/2017/02/woman-online-shopping.jpg" alt="Women Special">
            <div class="caption">
                <p>@Html.ActionLink("Know More", "ViewProducts", "Product", new { id = 5 }, new { @class = "btn btn-primary" })</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <h4>Get More Gadget</h4>
        <div class="thumbnail">
            <img src="https://stluciapost.puntomio.com/sites/default/files/images/blog/shutterstock_394182868.jpg" alt="Women Special">
            <div class="caption">
                <p>@Html.ActionLink("Know More", "ViewProducts", "Product", new { id = 5 }, new { @class = "btn btn-primary" })</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <h4>Wedding Wednesdays</h4>
        <div class="thumbnail">
            <img src="http://blogs.rediff.com/theweddingcardsonline/wp-content/uploads/sites/510624/2015/04/Stylish-Cherry-Wrap-Pakistani-and-Indian-Designer-Bridal-Dresses-2014-For-Women-5.jpg" alt="Women Special">
            <div class="caption">
                <p>@Html.ActionLink("Know More", "ViewProducts", "Product", new { id = 5 }, new { @class = "btn btn-primary" })</p>
            </div>
        </div>
    </div>
</div>