
<div>
    <table id="grid"></table>
    <div id="pager"></div>
</div>

<script>
    $(function () {
        $("#grid").jqGrid({
            url: "/Home/selectUser",
            datatype: 'json',
            mtype: 'Get',
            colNames: ["Id", "firstName", "middleName", "lastName", "phoneNumber", "emailId","dob"],
            colModel: [{ name: "Id", key: true, index: 'Id' },
                { name: "firstName", index: 'firstName' },
                { name: "middleName", index: 'middleName' },
                { name: "lastName", index: 'lastName' },
                { name: "phoneNumber", index: 'phoneNumber' },
                { name: "MailId", index: 'MailId' },
                { name: "dob", index: 'dob', formatter: "date", formatoptions: { srcformat: 'd/m/Y', newformat: 'd/m/Y' }, editable: true }
            ],
            height: 'auto',
            autowidth: 'true',
            rowNum: 5,
            LoadOnce: true,
            rowList: [10, 20, 30],
            pager: 'pager',
            sortName: 'firstname',
            viewrecords: true,
            sortorder: 'asc',
            caption: 'List of Users',
            emptyrecords: 'no records',
            jsonreader: {
                repeatitems: false,
                id: "0"
            },
            multiselect: false,
        }).navGrid('#pager', { edit: true, add: true, del: true, search: true, refresh: true, },
            {
                //EDIT OPTIONS
                width: 600,
                url: '/Home/UpdateUser',
                closeAfterEdit: true,
                onInitializeForm: function () {
                    $('#dob').datepicker({
                        changeMonth: true,
                        changeYear: true,
                        nextText: "",
                        prevText: ""
                    })
                },
                afterComplete: function (response) {
                    $('#grid').setGridParam({ datatype: 'json', page: 1 }).trigger('reloadGrid');
                    alert(response.responseText)
                },

            },
            {
                //ADD OPTIONS
                width: 600,
                url: '/Home/InsertUser',
                closeAfterAdd: true,
                onInitializeForm: function () {
                    $('#dob').datepicker({
                        changeMonth: true,
                        changeYear: true,
                        nextText: "",
                        prevText: ""
                    })
                },
                afterComplete: function (response) {
                    $('#grid').setGridParam({ datatype: 'json', page: 1 }).trigger('reloadGrid');
                    alert(response.responseText)
                },

            },
            {
                //DELETE OPTIONS
                width: 600,
                url: '/Home/DeleteUser',
                closeAfterDelete: true,
                msg: "Are you sure u want to delete this data?",
                afterComplete: function (response) {
                    $('#grid').setGridParam({ datatype: 'json', page: 1 }).trigger('reloadGrid');
                    alert(response.responseText)
                },

            },
            {
                //SEARCH OPTIONS
                width: 600,
                multipleSearch: true,
        });
    });
</script>